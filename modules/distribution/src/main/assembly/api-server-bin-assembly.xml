                <include>airavata.jks</include>
                <include>client_truststore.jks</include>
                <include>airavata-default-xacml-policy.xml</include>
            </includes>
        </fileSet>

        <!-- Create logs directory -->
        <fileSet>
            <directory>./</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
