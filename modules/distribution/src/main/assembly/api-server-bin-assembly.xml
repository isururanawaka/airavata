    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>

        <!-- ********************** copy release notes files ********************** -->
        <fileSet>
            <directory>../../../</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>RELEASE_NOTES</include>
            </includes>
        </fileSet>
        <!-- ********************** copy licenses, readme etc. ********************** -->
        <fileSet>
            <directory>src/main/resources/api-server</directory>
            <outputDirectory>.</outputDirectory>
